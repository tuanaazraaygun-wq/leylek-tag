{
  "expo": {
    "name": "Leylek TAG",
    "slug": "leylektag-app",
    "owner": "leylektagapp",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "leylektag",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.leylektag.app",
      "buildNumber": "4",
      "config": {
        "googleMapsApiKey": "AIzaSyAKqhXyi2cUC3GHLxjom4R_tQ3UfR5auUw"
      },
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Sürücü ve yolcu arasında sesli ve görüntülü görüşme yapmak için mikrofon izni gereklidir.",
        "NSCameraUsageDescription": "Görüntülü arama yapmak ve profil fotoğrafı çekmek için kamera izni gereklidir.",
        "NSLocationWhenInUseUsageDescription": "Yakındaki sürücüleri bulmak ve konumunuzu paylaşmak için konum izni gereklidir.",
        "NSLocationAlwaysUsageDescription": "Yolculuk sırasında konumunuzu takip etmek için konum izni gereklidir.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Sürücü ve yolcu eşleştirmesi için konum izni gereklidir.",
        "UIBackgroundModes": ["audio", "voip", "location"],
        "NSBluetoothAlwaysUsageDescription": "Bluetooth kulaklık kullanımı için izin gereklidir.",
        "NSBluetoothPeripheralUsageDescription": "Bluetooth cihazları ile bağlantı için izin gereklidir."
      }
    },
    "android": {
      "package": "com.leylektag.app",
      "versionCode": 4,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#3FA9F5"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_MICROPHONE",
        "android.permission.FOREGROUND_SERVICE_CAMERA",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.READ_PHONE_STATE",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAKqhXyi2cUC3GHLxjom4R_tQ3UfR5auUw"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0",
            "enableProguardInReleaseBuilds": false,
            "newArchEnabled": false
          },
          "ios": {
            "deploymentTarget": "15.1",
            "newArchEnabled": false
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Konumunuzu şoförlere göstermek için konum izni gereklidir."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Profil fotoğrafı çekmek için kamera izni gereklidir."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Sesli görüşme için mikrofon izni gereklidir."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "extra": {
      "router": {},
      "backendUrl": "https://rideshare-rtc.preview.emergentagent.com",
      "eas": {
        "projectId": "f00346b0-b9cb-47f9-a647-7f56b168e3a9"
      }
    }
  }
}
