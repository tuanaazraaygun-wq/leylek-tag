{
  "expo": {
    "name": "Leylek TAG",
    "slug": "leylektag-app",
    "owner": "leylektagapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "frontend",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "AIzaSyAKqhXyi2cUC3GHLxjom4R_tQ3UfR5auUw"
      },
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Sürücü ve yolcu arasında sesli görüşme yapmak için mikrofon izni gereklidir.",
        "NSCameraUsageDescription": "Profil fotoğrafı çekmek için kamera izni gereklidir."
      }
    },
    "android": {
      "package": "com.leylektag.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAKqhXyi2cUC3GHLxjom4R_tQ3UfR5auUw"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0",
            "enableProguardInReleaseBuilds": false,
            "newArchEnabled": false
          },
          "ios": {
            "deploymentTarget": "15.1",
            "newArchEnabled": false
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Konumunuzu şoförlere göstermek için konum izni gereklidir."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Profil fotoğrafı çekmek için kamera izni gereklidir."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Sesli görüşme için mikrofon izni gereklidir."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "extra": {
      "router": {},
      "backendUrl": "https://leylek-realtime-1.preview.emergentagent.com",
      "eas": {
        "projectId": "f00346b0-b9cb-47f9-a647-7f56b168e3a9"
      }
    }
  }
}
